<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".camera.CameraActivity">

    <ImageView
        android:id="@+id/iv_photo_show_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/sample" />

    <Button
        android:id="@+id/btn_start_camera_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="相机调用缩略图1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_photo_show_3" />

    <ImageView
        android:id="@+id/iv_photo_show_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_photo_show_1"
        app:layout_constraintTop_toTopOf="@+id/iv_photo_show_1"
        app:srcCompat="@mipmap/sample" />

    <Button
        android:id="@+id/btn_start_camera_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="相机调用缩略图2"
        app:layout_constraintStart_toStartOf="@+id/btn_start_camera_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_camera_1" />

    <Button
        android:id="@+id/btn_start_camera_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="相机调用原图3"
        app:layout_constraintStart_toStartOf="@+id/btn_start_camera_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_camera_2" />

    <Button
        android:id="@+id/btn_start_camera_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="相机调用原图4"
        app:layout_constraintStart_toStartOf="@+id/btn_start_camera_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_camera_3" />

    <ImageView
        android:id="@+id/iv_photo_show_3"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/iv_photo_show_1"
        app:layout_constraintTop_toBottomOf="@+id/iv_photo_show_1"
        app:srcCompat="@mipmap/sample" />

    <ImageView
        android:id="@+id/iv_photo_show_4"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_photo_show_3"
        app:layout_constraintTop_toTopOf="@+id/iv_photo_show_3"
        app:srcCompat="@mipmap/sample" />
</androidx.constraintlayout.widget.ConstraintLayout>