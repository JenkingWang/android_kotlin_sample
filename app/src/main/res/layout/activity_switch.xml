<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SwitchActivity">

    <Switch
        android:id="@+id/sw_develop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="调试"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/tgl_transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ToggleButton"
        app:layout_constraintStart_toStartOf="@+id/sw_develop"
        app:layout_constraintTop_toBottomOf="@+id/sw_develop" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/swc_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="语音"
        app:layout_constraintStart_toStartOf="@+id/tgl_transfer"
        app:layout_constraintTop_toBottomOf="@+id/tgl_transfer" />

    <Button
        android:id="@+id/btn_switch_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="检测状态"
        app:layout_constraintStart_toStartOf="@+id/swc_voice"
        app:layout_constraintTop_toBottomOf="@+id/swc_voice" />

</androidx.constraintlayout.widget.ConstraintLayout>