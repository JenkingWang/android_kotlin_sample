<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CheckBoxActivity">

    <CheckBox
        android:id="@+id/cb_banana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="香蕉"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cb_pear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="梨"
        app:layout_constraintStart_toStartOf="@+id/cb_banana"
        app:layout_constraintTop_toBottomOf="@+id/cb_banana" />

    <CheckBox
        android:id="@+id/cb_grape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="葡萄"
        app:layout_constraintStart_toStartOf="@+id/cb_pear"
        app:layout_constraintTop_toBottomOf="@+id/cb_pear" />
</androidx.constraintlayout.widget.ConstraintLayout>